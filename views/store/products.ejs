<%- include('../layouts/header.ejs') %>

<div class="container">
    <div class="row">
        <%- include('./sidebar.ejs') %>

        <!-- /.col-lg-3 -->
        <div class="col-lg-9 mt-5">
            <div class="row float-right">
                <form class="form-inline my-2 my-lg-0" action="/search" method="POST">
                    <input class="form-control mr-sm-2" type="input" placeholder="Search" name="searchInput"
                        aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
            <% if (searchInput) { %>
            <div class="row">
                <h3>All Products - <%= searchInput %></h3>
            </div>
            <% } %>
            <div class="row mt-5">
                <% if (data && data.length>0) { %>
                <% data.forEach(function(product) { %>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <a href="#"><img class="card-img-top" src="<%= product.image %>" alt=""></a>
                        <div class="card-body">
                            <h4 class="card-title">
                                <a href="/product/<%= product.id %>"><%= product.name %></a>
                            </h4>
                            <h5> â‚¹ <%= product.price %></h5>
                            <p class="card-text"> <%= product.description %> </p>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                        </div>
                    </div>
                </div>

                <% }) %>
                <% } %>
                <% if (!data) { %>
                <div class="row">
                    <h3 class="text-danger p-5">No Product found</h3>

                </div>
                <% } %>
            </div>
        </div>
        <!-- /.row -->

    </div>
    <!-- /.col-lg-9 -->

</div>
<!-- /.row -->

<%- include ('../layouts/footer.ejs') %>